generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  userId            Int     @id @default(autoincrement())
  cognitoId         String  @unique
  username          String  @unique
  fullName          String?
  email             String?
  profilePictureExt String?

  workspaceMembers  WorkspaceMember[]
  workspaceApplications WorkspaceApplication[]
  createdWorkspaces Workspace[]       @relation("WorkspaceCreator")
  authoredTasks     Task[]            @relation("TaskAuthor")
  taskAssignments  TaskAssignment[]
  attachments      Attachment[]
  comments         Comment[]
  commentReactions CommentReaction[]
  activities       Activity[]
  notifications    Notification[]
}

model Workspace {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  joinPolicy  Int     @default(0) // 0=INVITE_ONLY, 1=APPLY_TO_JOIN, 2=DISCOVERABLE
  iconExt     String?
  headerExt   String?
  createdById Int?

  createdBy User?             @relation("WorkspaceCreator", fields: [createdById], references: [userId])
  members      WorkspaceMember[]
  applications WorkspaceApplication[]
  boards       Board[]
  sprints   Sprint[]
  tags      Tag[]
  roles     Role[]
}

model Role {
  id          Int    @id @default(autoincrement())
  name        String
  color       String @default("#6B7280")
  permissions Int    @default(0)
  workspaceId Int

  workspace Workspace         @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  members   WorkspaceMember[]

  @@unique([workspaceId, name])
}

model WorkspaceMember {
  id          Int    @id @default(autoincrement())
  userId      Int
  workspaceId Int
  roleId      Int

  user      User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  role      Role      @relation(fields: [roleId], references: [id])

  @@unique([userId, workspaceId])
}

model WorkspaceApplication {
  id          Int      @id @default(autoincrement())
  userId      Int
  workspaceId Int
  message     String?
  status      Int      @default(0) // 0=PENDING, 1=APPROVED, 2=REJECTED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
}

model Board {
  id           Int     @id @default(autoincrement())
  name         String
  description  String?
  isActive     Boolean @default(true)
  displayOrder Int     @default(0)
  workspaceId  Int

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  tasks     Task[]
}

model Task {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  status       Int?      @default(0)
  priority     String?
  startDate    DateTime?
  dueDate      DateTime?
  points       Int?
  boardId      Int
  authorUserId Int
  parentTaskId Int?

  board           Board            @relation(fields: [boardId], references: [id], onDelete: Cascade)
  author          User             @relation("TaskAuthor", fields: [authorUserId], references: [userId])
  parentTask      Task?            @relation("Subtasks", fields: [parentTaskId], references: [id])
  subtasks        Task[]           @relation("Subtasks")
  taskAssignments TaskAssignment[]
  attachments     Attachment[]
  comments        Comment[]
  taskTags        TaskTag[]
  sprintTasks     SprintTask[]
  activities      Activity[]
  notifications   Notification[]
}

model Tag {
  id          Int     @id @default(autoincrement())
  name        String
  color       String?
  workspaceId Int

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  taskTags  TaskTag[]

  @@unique([workspaceId, name]) 
}

model TaskTag {
  id     Int @id @default(autoincrement())
  taskId Int
  tagId  Int

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([taskId, tagId])
}

model TaskAssignment {
  id     Int @id @default(autoincrement())
  userId Int
  taskId Int

  user User @relation(fields: [userId], references: [userId])
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([userId, taskId])
}

model Attachment {
  id           Int     @id @default(autoincrement())
  fileName     String?
  fileExt      String
  taskId       Int
  uploadedById Int

  task       Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  uploadedBy User @relation(fields: [uploadedById], references: [userId])
}

model Comment {
  id         Int      @id @default(autoincrement())
  text       String
  taskId     Int
  userId     Int
  createdAt  DateTime @default(now())
  isResolved Boolean  @default(false)

  task          Task              @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user          User              @relation(fields: [userId], references: [userId])
  reactions     CommentReaction[]
  notifications Notification[]
}

model CommentReaction {
  id        Int    @id @default(autoincrement())
  emoji     String
  commentId Int
  userId    Int

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [userId])

  @@unique([commentId, userId, emoji])
  @@index([commentId])
}

model Sprint {
  id          Int       @id @default(autoincrement())
  title       String
  startDate   DateTime?
  dueDate     DateTime?
  isActive    Boolean   @default(true)
  workspaceId Int

  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  sprintTasks SprintTask[]
}

model SprintTask {
  id       Int @id @default(autoincrement())
  sprintId Int
  taskId   Int

  sprint Sprint @relation(fields: [sprintId], references: [id], onDelete: Cascade)
  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([sprintId, taskId])
}

model Activity {
  id             Int      @id @default(autoincrement())
  taskId         Int
  userId         Int
  activityType   Int      // 0: Create, 1: Move, 2: Edit
  previousStatus String?  // For Move activities
  newStatus      String?  // For Move activities
  editField      String?  // For Edit activities
  createdAt      DateTime @default(now())

  task          Task           @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user          User           @relation(fields: [userId], references: [userId])
  notifications Notification[]

  @@index([taskId])
  @@index([userId])
}

model Notification {
  id         Int      @id @default(autoincrement())
  userId     Int
  type       Int                  // 0=Mention, 1=NearOverdue, etc.
  severity   Int      @default(0) // 0=Info, 1=Medium, 2=Critical
  message    String?
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  taskId     Int?
  commentId  Int?
  activityId Int?

  user     User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  task     Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  comment  Comment?  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  activity Activity? @relation(fields: [activityId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isRead])
  @@index([taskId])
}
